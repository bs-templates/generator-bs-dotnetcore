@page "{id:int}"
@model BAYSOFT.Pages.Samples.DeleteModel
@{
    ViewData["Title"] = "Delete";
}



<div class="row">
    <div class="col-12">
        <h4>Delete sample</h4>
        <h6 class="text-muted">Do you want to confirm a sample deletion?</h6>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.SampleID" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Input.Description"></label>
                        <input class="form-control" asp-for="Input.Description" disabled>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col-md-4">
                                    <a class="btn btn-link" asp-page="./Index">Voltar</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="offset-md-8 col-md-4">
                                    <button id="delete-button" type="submit" class="btn btn-block btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>