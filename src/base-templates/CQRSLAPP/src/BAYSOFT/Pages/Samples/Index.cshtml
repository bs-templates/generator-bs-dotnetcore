@page
@model BAYSOFT.Pages.Samples.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-10">
        <h4>Samples</h4>
    </div>
    <div class="col-md-2">
        <a class="btn btn-block btn-primary" asp-page="./Create">Create new</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-12">
        <table class="table table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th scope="col" style="width: 32px;"></th>
                    <th scope="col" style="width: 32px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sample in Model.Samples)
                {
                    <tr>
                        <td>@sample.SampleID</td>
                        <td>@sample.Description</td>
                        <td><a asp-page="./Edit" asp-route-id="@sample.SampleID" title="Editar" class="text-primary"><i class="far fa-edit"></i></a></td>
                        <td><a asp-page="./Delete" asp-route-id="@sample.SampleID" title="Excluir" class="text-danger"><i class="far fa-trash-alt"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>